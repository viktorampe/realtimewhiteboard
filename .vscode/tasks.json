{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "wallaby-setup",
      "type": "shell",
      "command": "node",
      "args": [".vscode/wallaby/wallaby-setup", "${input:wallabyProject}"],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "wallabyProject",
      "description": "Project choises to run wallaby with",
      "type": "pickString",
      "options": [
        "all",
        "browser",
        "dal",
        "guards",
        "scorm",
        "search",
        "shared",
        "testing",
        "ui",
        "pages-books",
        "pages-bundles",
        "pages-edu-contents",
        "pages-error",
        "pages-logout",
        "pages-messages",
        "pages-reports",
        "pages-shared",
        "pages-tasks",
        "pages-settings-alerts",
        "pages-settings-coupled-teachers",
        "pages-settings-credentials",
        "pages-settings-dashboard"
      ],
      "default": "all"
    }
  ]
}
