{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@campus/devlib": ["libs/devlib/src/index.ts"],
      "@campus/pages/bundles": ["libs/pages/bundles/src/index.ts"],
      "@campus/pages/alerts": ["libs/pages/alerts/src/index.ts"],
      "@campus/pages/logout": ["libs/pages/logout/src/index.ts"],
      "@campus/pages/messages": ["libs/pages/messages/src/index.ts"],
      "@campus/pages/profile": ["libs/pages/profile/src/index.ts"],
      "@campus/pages/reports": ["libs/pages/reports/src/index.ts"],
      "@campus/pages/tasks": ["libs/pages/tasks/src/index.ts"],
      "@campus/ui": ["libs/ui/src/index.ts"],
      "@campus/dal": ["libs/dal/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
